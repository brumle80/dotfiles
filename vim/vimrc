" This is used by plugin/completion.vim so is a g:
let g:dko_has_completion = 0

" @see https://github.com/junegunn/vim-plug/wiki/faq#conditional-activation
" @param  {Boolean}     cond    activate only if this is true
" @param  {Dictionary}  [opts]  activate with these additional options
" @return {Dictionary}
function! PlugWhen(cond, ...)
  let opts = get(a:000, 0, {})
  return a:cond ? opts : extend(opts, { 'on': [], 'for': [] })
endfunction

" Callback for 'do:' after update plugins that use neovim remote protocol
function! DoRemote(arg)
  UpdateRemotePlugins
endfunction

function! s:LoadPlugins()
  " Notes on adding plugins:
  " - Absolutely do not use 'for' if the plugin provides an `ftdetect/`

  " ==========================================================================
  " Plug: Async processes
  " ==========================================================================

  Plug 'Shougo/vimproc.vim', { 'do': 'make' }

  " ========================================================================
