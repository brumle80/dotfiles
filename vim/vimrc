  Plug 'shawncplus/phpcomplete.vim', { 'for': 'php' }
  "Plug 'm2mdas/phpcomplete-extended', { 'for': 'php' }
  "Plug 'dsawardekar/wordpress.vim', { 'for': ['php'] }

  " server-based PHP completion disabled
